[Unit]
Description=Rubrica LDAP - Editor contatti con monitor chiamate
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/ldap_editor
EnvironmentFile=/opt/ldap_editor/.env
ExecStart=/opt/ldap_editor/venv/bin/gunicorn -w 1 -k gevent -b 0.0.0.0:5000 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
